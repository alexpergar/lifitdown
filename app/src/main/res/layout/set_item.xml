<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="1dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp">

        <ImageView
            android:id="@+id/btnDeleteSet"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/txtWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <TextView
            android:id="@+id/txtIconWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="kg"
            android:textColor="#C3C3C3"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/txtIconReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="x"
            android:textColor="#C3C3C3"
            android:layout_marginStart="40dp"/>

        <EditText
            android:id="@+id/txtReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <EditText
            android:id="@+id/txtWorkingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/iconWorkingTime"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_worktime"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            app:tint="#C3C3C3"/>

        <EditText
            android:id="@+id/txtRestingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/imageRestingTime"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_resttime"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            app:tint="#C3C3C3"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>