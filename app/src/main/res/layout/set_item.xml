<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="1dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnDeleteSet"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txtWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <TextView
            android:id="@+id/txtIconWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="kg"
            android:textColor="#C3C3C3"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/txtIconReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="x"
            android:textColor="#C3C3C3"
            android:layout_marginStart="40dp"/>

        <EditText
            android:id="@+id/txtReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <EditText
            android:id="@+id/txtWorkingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/imageWorkingTime"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_worktime"
            android:layout_marginStart="5dp"
            app:tint="#C3C3C3"/>

        <EditText
            android:id="@+id/txtRestingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/imageRestingTime"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_resttime"
            android:layout_marginStart="5dp"
            app:tint="#C3C3C3"/>

        <CheckBox
            android:id="@+id/checkboxFailure"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"/>

        <ImageView
            android:id="@+id/imageFailure"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_failure"
            app:tint="#C3C3C3"/>

        <EditText
            android:id="@+id/txtRIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <TextView
            android:id="@+id/txtIconRIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="RIR"
            android:textColor="#C3C3C3"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/txtTargetReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/imageTargetReps"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_target"
            android:layout_marginStart="5dp"
            app:tint="#C3C3C3"/>

        <Spinner
            android:id="@+id/spinnerMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/txtComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="________"
            android:textSize="18sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/imageComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_comment"
            android:layout_marginStart="5dp"
            app:tint="#C3C3C3"/>

        <ImageView
            android:id="@+id/imageNote"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_note_empty"
            android:layout_marginStart="40dp"
            app:tint="#C3C3C3"/>

        <EditText
            android:id="@+id/txtPersonal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <TextView
            android:id="@+id/txtIconPersonal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="*"
            android:textColor="#C3C3C3"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/txtPersonal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="___"
            android:textSize="18sp"
            android:background="@null" />

        <TextView
            android:id="@+id/txtIconPersonal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="**"
            android:textColor="#C3C3C3"
            android:layout_marginStart="5dp" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>