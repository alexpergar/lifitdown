<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleWorkoutNotebook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_variant_night</item>
        <item name="colorOnPrimary">@color/on_primary_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_night</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_night</item>
        <item name="colorOnSecondary">@color/on_secondary_night</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Personal changes -->
        <item name ="android:colorBackground">@color/background_night</item>
    </style>

    <style name="cardViewStyle">
        <item name ="cardBackgroundColor">@color/cardview_night</item>
    </style>

    <style name="deeperCardViewStyle">
        <item name ="cardBackgroundColor">@color/deepercardview_night</item>
    </style>

    <!-- Inner view style -->
    <style name="fonts_color">
        <item name="android:textColor">@color/fonts_night</item>
    </style>

    <style name="button_color">
        <item name="android:background">@color/fonts_night</item>
    </style>
</resources>